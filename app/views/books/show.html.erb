<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @profile_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(50,50) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
          <td>
            <%= render 'favorites/favorites', book: @book %><!--いいねボタン-->
          </td>
          <td>
            <p>コメント数:<%= @book.book_comments.count %></p><!--コメント数表示-->
          </td>
        </tr>
      </table>
<!--以下コメント機能-->


      <table>
        <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <p><%= image_tag book_comment.user.get_profile_image(50,50) %></p>
            <%= book_comment.user.name %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <td>
            <% if book_comment.user == current_user %><!--コメントした本人しか削除できないようにする-->
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, style: "width:100%", rows: '5', placeholder: "コメントをここに入力" %>
          </br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>